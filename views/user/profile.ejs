<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
      <h1 style="text-align: center;"><%= currentUser.username %> profile page</h1>
        <form class="form-horizontal" action="/register" method="POST">
          <div class="form-group">
            <label class="col-sm-2 control-label">Username:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="currentUser[username]" value="<%= currentUser.username %>" readonly>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Email adress:</label>
            <div class="col-sm-10">
                <input class="form-control" type="email" name="currentUser[email]" value="<%= currentUser.email %>" readonly>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">First Name:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="currentUser[firstName]" value="<%= currentUser.firstName %>" readonly>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Last Name:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="currentUser[lastName]" value="<%= currentUser.lastName %>" readonly>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Avatar:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="currentUser[avatar]" value="<%= currentUser.avatar%>" readonly>
            </div>
          </div>
        </form>
        <a class="btn btn-warning" href="/user/<%= currentUser._id %>/edit">Edit</a>
        <a href="/places">Go Back</a>
      </div>
    </div>
  </div>

<%- include ("../partials/footer") %>