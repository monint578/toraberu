<%- include ("../partials/header") %>

<div class="container-fluid py-4 px-5">
	<header class="jumbotron py-3 px-5 mb-0">
		<h1 class="display-4">Welcome to Toraberu!</h1>
        <p class="lead" style="font-weight: 400;">Toraberu is our hand-picked <em>unbelievable</em> places for you to visit</p>
		<p><a class="btn btn-info btn-lg" href="/places/new">Add New Destination</a></p>
	</header>
	
	<div class="row text-center card-deck">
        <% content.forEach(function(content){ %>
        <div class="col-md-3 col-sm-6 mt-4">
            <div class="card" style="align-items: center;">
                <img class="card-img-top cards-images rounded" src="<%= content.images[0] %>">
                <div class="card-body p-1">
                    <h4 class="card-title text-left px-2 pt-2"><%= content.name %></h4>
                    <p class="px-2 card-text text-left text-secondary"><%= content.description.substring(0, 150) %>...</p>
                    <hr class="my-1">
                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            <% if (content.rating === 0) { %>
                                <em>No reviews yet.</em>
                                <% } else { %>
                                    <span class="fas fa-star checked"></span>
                                    <span class="<% if (content.rating > 1.5) { %> fas fa-star checked <% } else { %> far fa-star checked <% }; %>"></span>
                                    <span class="<% if (content.rating > 2.5) { %> fas fa-star checked <% } else { %> far fa-star checked <% }; %>"></span>
                                    <span class="<% if (content.rating > 3.5) { %> fas fa-star checked <% } else { %> far fa-star checked <% }; %>"></span>
                                    <span class="<% if (content.rating > 4.5) { %> fas fa-star checked <% } else { %> far fa-star checked <% }; %>"></span>
                                <% } %>
                        </div>
                        <div class="col-lg-6 col-md-12">
                            <p><a href="/places/<%= content._id %>" class="">Read more <i class="fas fa-angle-double-right"></i></a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>	

<%- include ("../partials/footer") %>