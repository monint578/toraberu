<%- include ("../partials/header") %>

<div class="container-fluid px-4 heightvh">
	<header class="jumbotron m-0">
		<h1 class="display-4">Welcome to Toraberu!</h1>
        <p class="lead font-weight-normal">Toraberu is our hand-picked <em>unbelievable</em> places for you to visit</p>
        <% if(currentUser) { %>
            <p><a class="btn btn-info btn-lg" href="/places/new">Add New Destination</a></p>
        <% } else { %>
            <div class="mb-1">
                <p><a class="btn btn-info btn-lg" data-toggle="modal" data-target="#IsLoggedIn">Add New Destination</a></p>
            </div>
            <!-- <%- include ("../partials/isloggedin") %> -->
        <% }; %>
    </header>
    <% if(!currentUser) { %>
        <%- include ("../partials/isloggedin") %>
    <% }; %>
	<div class="row text-center card-deck mx-0">
        <% content.forEach(function(content){ %>
        <div class="col-xl-3 col-lg-4 col-md-6 px-4 mt-4">
            <div class="card m-0">
                <img class="card-img-top cards-images rounded" src="<%= content.images[0] %>">
                <div class="card-body p-2">
                    <h4 class="card-title text-left m-0 pl-2 py-1"><%= content.name %></h4>
                    <p class="card-text text-left text-secondary pl-2 m-0"><%= content.description.substring(0, 150) %>...</p>
                    <hr class="my-1">
                    <div class="d-flex justify-content-between">
                        <div class="py-1 pl-2">
                            <% if (content.rating === 0) { %>
                                <em>No reviews yet.</em>
                                <% } else { %>
                                    <span class="fas fa-star checked"></span>
                                    <span class="<% if (content.rating > 1.5) { %> fas fa-star checked <% } else { %> far fa-star checked <% }; %>"></span>
                                    <span class="<% if (content.rating > 2.5) { %> fas fa-star checked <% } else { %> far fa-star checked <% }; %>"></span>
                                    <span class="<% if (content.rating > 3.5) { %> fas fa-star checked <% } else { %> far fa-star checked <% }; %>"></span>
                                    <span class="<% if (content.rating > 4.5) { %> fas fa-star checked <% } else { %> far fa-star checked <% }; %>"></span>
                                <% } %>
                        </div> 
                        <div class="py-1 pr-2">
                            <p class="m-0"><a href="/places/<%= content._id %>" class="">Read more <i class="fas fa-angle-double-right"></i></a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>
<br>

<%- include ("../partials/footer") %>