<%- include ("../partials/header") %>

<div class="container-fluid heightvh">
		<h1 class="text-center edit-name">Edit "<%= content.name %>" place</h1>
		<div class="maid-container">
			<form action="/places/<%= content._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="content[name]" value="<%= content.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="content[location]" value="<%= content.location %>">
				</div>
				<% content.images.forEach(function(image, index){ %>
				<div class="form-group">
					<input class="form-control" type="text" name="content[images][]" value="<%= content.images[index] %>">
				</div>
				<% }); %>
				<div class="form-group">
					<textarea class="form-control" type="text" name="content[description]" rows="6"><%= content.description %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-outline-info btn-block">Submit</button>
				</div>
			</form>
			<a href="/places/"><i class="fa fa-angle-double-left"></i> Go Back</a>
		</div>
</div>
	
<%- include ("../partials/footer") %>