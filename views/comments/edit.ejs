<%- include ("../partials/header") %>

<div class="container mw-50 py-4 px-5">
	<h1 class="text-center">Edit Comment</h1>
	<div class="px-5">
		<form action="/places/<%= content_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<textarea class="form-control" type="text" name="comment[text]" rows="6"><%= comment.text %></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-outline-info btn-block">Submit!</button>
			</div>
		</form>
		  <a href="/places/<%= content_id %>"><i class="fas fa-angle-double-left"></i> Go Back</a>
	</div>
</div>
	
<%- include ("../partials/footer") %>