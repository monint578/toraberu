
<div class="modal fade" id="ModalComments" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Write a New Comment for "<%= content.name %>"</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/places/<%= content._id %>/comments/" method="POST">
                <div class="form-group">
                  <textarea class="form-control" type="text" name="comment[text]" placeholder="Comment" rows="6" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Submit new Comment</button>
                </div>
            </form>
          </div>
        </div>
    </div>
</div>