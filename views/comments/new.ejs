<%- include ("../partials/header") %>

<div class="container-fluid py-4 px-5">
		<h1>Create a New Comment</h1>
		<div>
			<form action="/places/<%= content._id %>/comments/" method="POST">
				<div class="form-group">
				  <textarea class="form-control" type="text" name="comment[text]" placeholder="Comment" rows="6"></textarea>
				</div>
				<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			  <a href="/places/<%= content._id %>"><i class="fas fa-angle-double-left"></i> Go Back!</a>
		</div>
</div>
	
<%- include ("../partials/footer") %>